<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.app.mapper.GetPreUserDataMapper">
    <resultMap id="getPreUserDataResultMap" type="com.web.app.domain.userLogin.GetPreUserData">
    <result column="email" jdbcType="VARCHAR" property="email" />
    </resultMap>
    <!-- TBL「ユーザ仮登録（odr_users_pre）」のデータ取得 -->    
    <select id="getUserPre" resultMap="getPreUserDataResultMap">
        SELECT
            email
        FROM
            react_use.odr_users_pre
        WHERE
            guid = #{guid,jdbcType=VARCHAR}  AND registerDate &lt;= DATE_SUB(NOW(), INTERVAL 3 DAY ) ; 
    </select>
</mapper>
