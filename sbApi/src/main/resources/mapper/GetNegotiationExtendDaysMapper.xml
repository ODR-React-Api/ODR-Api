<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.app.mapper.GetNegotiationExtendDaysMapper">

    <!-- 交渉期限延長可能日数取得 -->
    <select id="getNegotiationExtendDays" resultType="java.lang.String">
        SELECT
            NegotiationExtendDays
        FROM
            master_platforms
        WHERE
            id = #{platformId}
    </select>
</mapper>