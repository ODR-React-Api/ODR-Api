<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.app.mapper.CaserelationsMapper">

    <resultMap id="BaseResultMap" type="com.web.app.domain.Caserelations">
            <id property="id" column="id" jdbcType="VARCHAR"/>
            <result property="CaseId" column="CaseId" jdbcType="VARCHAR"/>
            <result property="CasePetition" column="CasePetition" jdbcType="VARCHAR"/>
            <result property="PlatformId" column="PlatformId" jdbcType="VARCHAR"/>
            <result property="TraderAgent1_UserEmail" column="TraderAgent1_UserEmail" jdbcType="VARCHAR"/>
            <result property="TraderAgent2_UserEmail" column="TraderAgent2_UserEmail" jdbcType="VARCHAR"/>
            <result property="TraderAgent3_UserEmail" column="TraderAgent3_UserEmail" jdbcType="VARCHAR"/>
            <result property="TraderAgent4_UserEmail" column="TraderAgent4_UserEmail" jdbcType="VARCHAR"/>
            <result property="TraderAgent5_UserEmail" column="TraderAgent5_UserEmail" jdbcType="VARCHAR"/>
    </resultMap>

    <update id="updateCaserelations" parameterType="com.web.app.domain.Caserelations">
        UPDATE react_use.case_relations
        SET
            TraderAgent1_UserEmail = #{traderagentuserListAll[0]},
            TraderAgent2_UserEmail = #{traderagentuserListAll[1]},
            TraderAgent3_UserEmail = #{traderagentuserListAll[2]},
            TraderAgent4_UserEmail = #{traderagentuserListAll[3]},
            TraderAgent5_UserEmail = #{traderagentuserListAll[4]}
        WHERE
            CaseId = #{caseId}
            AND PlatformId = #{platformId}
    </update>

</mapper>
