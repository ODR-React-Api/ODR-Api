<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.app.mapper.GetCaseRelationsMapper">
    <!-- 根拠セッション.PlatformId(platformId)引数.案件ID(caseId)案件テーブルから案件情報を取得する。 -->
    <select id="FindCaseInfo" resultType="com.web.app.domain.Entity.Cases">
        SELECT
            NegotiationEndDate,PlatformId
        FROM
            cases
        WHERE
            CaseId = #{caseId}
            AND PlatformId = #{platformId}
    </select>

</mapper>
